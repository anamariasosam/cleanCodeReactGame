{
  "name": "CleanCodeGame",
  "description": "Game",
  "author": "@anamariasosam",
  "version": "0.1.9",
  "private": true,
  "repository": "https://github.com/anamariasosam/cleanCodeReactGame",
  "dependencies": {
    "cross-env": "5.0.1",
    "electron-is-dev": "0.1.2",
    "electron-log": "^2.2.6",
    "electron-updater": "^2.4.3",
    "node-notifier": "^5.1.2",
    "react": "15.5.4",
    "react-dom": "15.5.4"
  },
  "devDependencies": {
    "concurrently": "3.4.0",
    "electron": "1.6.10",
    "electron-builder": "^19.8.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "prettier": "^1.4.4",
    "react-scripts": "1.0.7",
    "wait-on": "2.0.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.cleancodegame",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "build -mwl --em.main=build/electron.js",
    "release": "build --em.main=build/electron.js --publish=always",
    "prepack": "yarn build",
    "prerelease": "yarn build"
  }
}
