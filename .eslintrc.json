{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "globals": {
    "window": true
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "arrow-body-style": ["error", "as-needed"],
    "semi": [2, "never"]
  }
}
